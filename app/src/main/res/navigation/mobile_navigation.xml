    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_today_habits">

    <fragment
        android:id="@+id/nav_today_habits"
        android:name="com.nttn.productivity_app.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_habitslist" />

    <fragment
        android:id="@+id/nav_all_habits"
        android:name="com.nttn.productivity_app.ui.home.AllHabitsFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_habitslist" />

    <fragment
        android:id="@+id/nav_stats"
        android:name="com.nttn.productivity_app.ui.stats.StatsFragment"
        android:label="@string/menu_stats"
        tools:layout="@layout/fragment_stats" />

    <activity
        android:id="@+id/nav_settings"
        android:name="com.nttn.productivity_app.ui.SettingsActivity"
        android:label="Settings"
        tools:layout="@layout/settings_activity" />
